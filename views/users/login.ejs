<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-3">

        <h3>Login For Wonderlust Users</h3>
        <form action="/login" method="POST" novalidate class="needs-validation">

            <div class="mb-3">
                <label label for="username" class="form-label" >Username</label>
                <input name="username"  type="text" id="username" class="form-control" required/>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label" >password</label>
                <input name="password"  type="password" id="password" class="form-control" required/>
            </div>

            <button class="btn btn-primary add-btn">Login</button>

        </form>
    </div>    
</div>